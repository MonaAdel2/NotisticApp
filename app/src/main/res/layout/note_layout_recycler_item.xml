<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/note_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:elevation="7dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/baby_yellow">

        <LinearLayout
            android:id="@+id/note_layout_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="15"
                android:layout_marginVertical="10dp">

                <ImageView
                    android:id="@+id/description_arrow_card"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/arrow_down_icon"
                    android:scaleType="center"
                    android:rotationX="0"
                   />

                <TextView
                    android:id="@+id/tv_title_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_black"
                    android:layout_weight="14" />



                <ImageView
                    android:id="@+id/img_more_options_card"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/more_vert_icon"
                    android:scaleType="center"
                    android:layout_weight="1" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/description_layout_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_discription_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="16sp"
                    android:paddingHorizontal="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/dark_black"
                    android:layout_weight="5"/>

            </LinearLayout>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

</RelativeLayout>